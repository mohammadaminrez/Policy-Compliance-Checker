# Policy Compliance Checker - Environment Configuration
# Copy this file to .env and customize as needed

# Policy Wrapper Keys
# Comma-separated list of keys to check when extracting policies from JSON objects
# Default: policies,rules,checks,requirements,constraints,validations
POLICY_WRAPPER_KEYS=policies,rules,checks,requirements,constraints,validations

# User Data Wrapper Keys
# Comma-separated list of keys to check when extracting user data from JSON objects
# Default: users,data,records,items,entries,people
USER_WRAPPER_KEYS=users,data,records,items,entries,people

# User Label Keys
# Comma-separated list of keys to use for human-readable user labels (in priority order)
# Default: user_id,id,email,username,name,first_name,last_name,display_name
USER_LABEL_KEYS=user_id,id,email,username,name,first_name,last_name,display_name

# Policy Label Keys
# Comma-separated list of keys to use for human-readable policy labels (in priority order)
# Default: name,title,id,policy,policy_id,policy_name,description
POLICY_LABEL_KEYS=name,title,id,policy,policy_id,policy_name,description

# Enable Heuristic Array Detection
# If true, automatically detects the largest array in objects when no wrapper key matches
# Default: true
ENABLE_HEURISTIC_DETECTION=true

# Minimum Heuristic Array Size
# Minimum array size to consider for heuristic detection
# Default: 1
MIN_HEURISTIC_ARRAY_SIZE=1
